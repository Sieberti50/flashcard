<Window x:Class="Flashcards.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flashcards - Nauka słówek" Height="600" Width="800"
        Background="#FFF5F5F5" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="Wczytaj z pliku" Width="120" Margin="0,0,10,0" Click="LoadFile_Click"/>
            <ComboBox x:Name="CategoryComboBox" Width="180" Margin="0,0,10,0" 
                      SelectionChanged="CategoryComboBox_SelectionChanged" VerticalAlignment="Center"/>
            <Button Content="+ Nowy zestaw" Width="110" Margin="0,0,10,0" Click="NewSet_Click"/>
            <Button Content="Edytuj słówka" Width="110" Margin="0,0,10,0" Click="EditCards_Click"/>
        </StackPanel>

        <TextBlock x:Name="StatsTextBlock" Grid.Row="1" FontSize="15" Foreground="#FF444444" 
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button Content="Tryb nauki" Width="140" Height="40" FontSize="16" Margin="10" Click="LearningMode_Click"/>
            <Button Content="Tryb testu" Width="140" Height="40" FontSize="16" Margin="10" Click="TestMode_Click"/>
        </StackPanel>

        <Border Grid.Row="3" Background="White" CornerRadius="15" Padding="40" BorderBrush="#DDD" BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="QuestionTextBlock" Grid.Row="0" FontSize="42" FontWeight="Bold"
                           TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>

                <Button x:Name="ShowAnswerButton" Grid.Row="1" Content="Pokaż odpowiedź" Width="200" Height="50"
                        FontSize="20" Margin="0,20" Click="ShowAnswer_Click"/>

                <TextBlock x:Name="AnswerTextBlock" Grid.Row="2" FontSize="42" FontWeight="Bold"
                           TextAlignment="Center" VerticalAlignment="Center" Foreground="#FF1976D2"
                           Visibility="Collapsed" TextWrapping="Wrap"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Button Content="Poprzednie" Width="120" Margin="0,0,15,0" Click="PrevCard_Click"/>
            <TextBlock x:Name="InfoTextBlock" VerticalAlignment="Center" FontSize="18" Margin="20,0"/>
            <Button Content="Następne" Width="120" Margin="15,0,0,0" Click="NextCard_Click"/>
        </StackPanel>

        <StackPanel x:Name="TestButtonsPanel" Grid.Row="5" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Visibility="Collapsed" Margin="0,10">
            <Button Content="Poprawnie" Background="#FF4CAF50" Foreground="White" Width="140" Height="55"
                    FontSize="18" Margin="15" Click="CorrectAnswer_Click"/>
            <Button Content="Błąd" Background="#FFF44336" Foreground="White" Width="140" Height="55"
                    FontSize="18" Margin="15" Click="WrongAnswer_Click"/>
        </StackPanel>
    </Grid>
</Window>