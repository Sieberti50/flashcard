<Window x:Class="Flashcards.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flashcards - nauka słówek" Height="450" Width="600"
        Background="#FFF5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Przyciski menu -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="Wczytaj słówka" Width="120" Margin="0,0,10,0" Click="LoadFile_Click"/>
            <Button Content="Tryb nauki" Width="120" Margin="0,0,10,0" Click="LearningMode_Click"/>
            <Button Content="Tryb testu" Width="120" Click="TestMode_Click"/>
        </StackPanel>

        <!-- Informacja o liczbie słówek i wyniku -->
        <TextBlock x:Name="InfoTextBlock" Grid.Row="1" FontSize="16" Margin="0,0,0,20"
                   Text="Wczytaj plik ze słówkami, aby zacząć." HorizontalAlignment="Center"/>

        <!-- Główna karta -->
        <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="30"
                BorderBrush="#FFCCCCCC" BorderThickness="2" VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="QuestionTextBlock" Grid.Row="0" 
                           FontSize="36" FontWeight="Bold" TextAlignment="Center"
                           VerticalAlignment="Center" TextWrapping="Wrap"/>

                <Button x:Name="ShowAnswerButton" Grid.Row="1" Content="Pokaż odpowiedź" 
                        Width="180" Height="50" FontSize="18" Margin="0,20"
                        Click="ShowAnswer_Click" Visibility="Collapsed"/>

                <TextBlock x:Name="AnswerTextBlock" Grid.Row="2" 
                           FontSize="36" FontWeight="Bold" TextAlignment="Center"
                           VerticalAlignment="Center" Foreground="#FF1976D2"
                           Visibility="Collapsed" TextWrapping="Wrap"/>
            </Grid>
        </Border>

        <!-- Przyciski nawigacji / odpowiedzi w teście -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,10">
            <Button x:Name="PrevButton" Content="Poprzednie" Width="120" Margin="0,0,10,0" Click="PrevCard_Click"/>
            <Button x:Name="NextButton" Content="Następne →" Width="150" FontSize="18" Click="NextCard_Click"/>
        </StackPanel>

        <!-- Tryb testu - przyciski odpowiedzi -->
        <StackPanel x:Name="TestButtonsPanel" Grid.Row="4" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Visibility="Collapsed">
            <Button Content="Poprawnie" Background="#FF4CAF50" Foreground="White" 
                    Width="120" Height="50" Margin="10" Click="CorrectAnswer_Click"/>
            <Button Content="Błąd" Background="#FFF44336" Foreground="White" 
                    Width="120" Height="50" Margin="10" Click="WrongAnswer_Click"/>
        </StackPanel>
    </Grid>
</Window>